@model LTW_NTTinh_2024802010018.Models.Customer

@{
    ViewBag.Title = "Thông tin người dùng";
    Layout = "~/Views/Shared/_LayoutMart.cshtml";

}
@{
    string birthDateOnly = Model.Birthday.Date.ToShortDateString();
}
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">THÔNG TIN CÁ NHÂN</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a href="@Url.Action("Index","Mart")">Trang chủ</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Thông tin cá nhân</p>
        </div>
    </div>
</div>
@if (Model.Sex.ToString().Contains("Nam"))
{
