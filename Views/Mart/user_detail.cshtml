        <h2 class="section-title px-5"><span class="px-2">Thông tin cá nhân</span></h2>
    </div>
    <div style="padding-top:30px;">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava6.webp" alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px;">
                            <h4 class="my-3">@Html.DisplayFor(model => model.CustomerName)</h4>
                            <p class="text-muted mb-1">@Html.DisplayFor(model => birthDateOnly)</p>
                            <p class="text-muted mb-4">@Html.DisplayName("Địa chỉ: ") @Html.DisplayFor(model => model.Address)</p>
                            <div class="d-flex justify-content-center mb-2">
