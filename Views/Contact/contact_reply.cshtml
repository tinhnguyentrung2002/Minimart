@model LTW_NTTinh_2024802010018.Models.Response

<script src="~/ckeditor/ckeditor.js"></script>
<style>
    label {
        font-weight: bold;
    }
    input{
        padding:10px;
        width:500px;
    }
</style>
<div class="modal fade" id="reply-@Model.ResponseID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div style="min-width:1000px;" class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 style="text-align:center" class="modal-title" id="exampleModalLabel">HỒI ĐÁP THẮC MẮC</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            @using (Html.BeginForm("contact_reply", "Contact", FormMethod.Post, new
            {
                @enctype = "multipart/form-data"
            }))
            {
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="control-label col-md-2">Tên khách</label>
                            <div class="col-md-10">
                                <input readonly type="text" name="Id" value="@Model.ResponseID" />
                                @Html.ValidationMessageFor(model => model.ResponseGuestName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Tên khách</label>
                            <div class="col-md-10">
                                <input readonly type="text" name="name" value="@Model.ResponseGuestName" />
                                @Html.ValidationMessageFor(model => model.ResponseGuestName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Email khách</label>
                            <div class="col-md-10">
                                <input readonly type="text" name="email" value="@Model.ResponseEmail" />
                                @Html.ValidationMessageFor(model => model.ResponseEmail, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Câu hỏi</label>
                            <div class="col-md-10">
                                <input readonly type="text" name="question" value="@Model.ResponseContent" />
                                @Html.ValidationMessageFor(model => model.ResponseContent, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Trả lời</label>
                            <div class="col-md-10">
                                <textarea maxlength="300" style=" width: 350px;  height: 150px;" name="rep" id="rep" placeholder="Nhập câu trả lời"></textarea>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                    <input id="popup"  type="submit" value="Xác nhận" style="font-size:large;width:auto" class="btn btn-success" />
                </div>
            }
        </div>
    </div>
</div>

