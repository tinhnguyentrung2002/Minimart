@model LTW_NTTinh_2024802010018.Models.New
<style>
    * {
        font-size: large;
    }
</style>
<div class="modal fade" id="edit-@Model.NewsID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div style="min-width:1000px;" class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 style="text-align:center" class="modal-title" id="exampleModalLabel">CHỈNH SỬA THÔNG TIN</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            @using (Html.BeginForm("Edit", "News", FormMethod.Post, new
            {
                @enctype = "multipart/form-data"
            }))
            {
                <div class="modal-body">
                    <div class="form-horizontal" style="margin-top:30px;">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="control-label col-md-2">Mã bài viết: </label>
                            <div class="col-md-10">
                                <input type="text" size="50" value="@Model.NewsID" placeholder="Nhập mã bài viết" name="NewsID" readonly />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Tác giả bài viết: </label>
                            <div class="col-md-10">
                                <input type="text" maxlength="30" size="70" value="@Model.NewsAuthor" placeholder="Nhập tác giả bài viết" name="Name" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Tiêu đề bài viết: </label>
                            <div class="col-md-10">
                                <input type="text" maxlength="100" size="70" value="@Model.NewsTitle" placeholder="Nhập tiêu đề bài viết" name="Title" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Nội dung: </label>
                            <div class="col-md-10">
                                <input  maxlength="4000" type="text" size="90" value="@Model.NewsContent" placeholder="Nhập nội dụng" name="Description" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Ảnh Thumbnail:</label>
                            <div class="col-md-10">
                                <input type="file" name="fFileUpload" />
                                <img style="border:1px solid;" src="~/Images/@Model.Thumbnail" width="120"> (Ảnh hiện tại)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                    <input id="popup" type="submit" value="Lưu" style="font-size:large" class="btn btn-success" />
                </div>
            }
        </div>
    </div>
</div>

