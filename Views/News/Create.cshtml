@model LTW_NTTinh_2024802010018.Models.New
<script src="~/ckeditor/ckeditor.js"></script>
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div style="min-width:1000px;" class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 style="text-align:center" class="modal-title" id="exampleModalLabel">THÊM BÀI VIẾT MỚI</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            @using (Html.BeginForm("Create", "News", FormMethod.Post, new
            {
                @enctype = "multipart/form-data"
            }))
            {
                <div class="modal-body">

                    @Html.AntiForgeryToken()

                    <div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="control-label col-md-2">Mã bài viết: </label>
                            <div class="col-md-10">
                                <input type="text" size="70" name="ID" disabled value="@ViewBag.IDP" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Tác giả: </label>
                            <div class="col-md-10">
                                <input type="text" maxlength="30" size="30" placeholder="Nhập tên tác giả" name="Name" value="@ViewBag.NewsName" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Tiêu đề bài viết: </label>
                            <div class="col-md-10">
                                <input type="text" maxlength="100" size="30" placeholder="Nhập tiêu đề bài viết" name="Title" value="@ViewBag.NewsName" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Nội dung: </label>
                            <div class="col-md-10">
                                <input maxlength="4000" type="text" placeholder="Nhập nội dung" size="90" id="Description1" name="Description" value="@ViewBag.Description" required />
                                <!--<script>CKEDITOR.replace('Description1');</script>-->
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Ảnh thumbnail:</label>
                            <div class="col-md-10">
                                <input type="file" name="fFileUpload" />
                                @*Thông báo lỗi yêu cầu phải chọn ảnh bìa*@
                                @ViewBag.ThongBao
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                    <input type="submit" value="Tạo mới" style="font-size:large" class="btn btn-success" />
                </div>
            }
        </div>
    </div>
</div>


