@model IEnumerable<LTW_NTTinh_2024802010018.Models.Employee>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.6.0/dt-1.12.1/b-2.2.3/fc-4.1.0/sc-2.0.7/sb-1.3.4/sp-2.0.2/sl-1.4.0/datatables.min.css" />
<link href="~/Content/sb-admin-2.css" rel="stylesheet" />
<link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css"><!-- Custom styles for this template-->
<script type="text/javascript" src="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.6.0/dt-1.12.1/b-2.2.3/fc-4.1.0/sc-2.0.7/sb-1.3.4/sp-2.0.2/sl-1.4.0/datatables.min.js"></script>
<script language="JavaScript" src="https://code.jquery.com/jquery-3.5.1.js" type="text/javascript"></script>



<header>
    <div style="width:fit-content;">
        <img style="margin:10px;float:left" src="~/Images/logo.png" width="190" height="170" />
        <div style="margin-top:25px;float:right">
            <h1 style="color:black;font-weight:bold">Siêu thị Mini - Minimart</h1>
            <h4 style="color: dimgrey">Địa chỉ: 123 Thủ Khoa Huân, Thuận An, Bình Dương</h4>
            <h4 style="color: dimgrey ">Điện thoại: +84 123 456789</h4>
            <h4 style="color: dimgrey ">Email: minimart@gmail.com</h4>
        </div>
    </div>
</header>


<body>
    <table id="myTable" class="table table-striped table-bordered" style="width:100%; font-size:large;margin-bottom:5px;">
        <thead>
            <tr><td style="text-align:center" colspan="9"><h2 style="font-weight:bold">Báo cáo nhân viên</h2></td></tr>

            <tr>
                <th style="text-align: center; width: 80px">
                    Mã nhân viên
                </th>
                <th style="text-align: center; width: 110px">
                    Tên nhân viên
                </th>
                <th style="text-align: center; width: 110px">
                    Địa chỉ
                </th>
                <th style="text-align: center; width: 80px">
                    Ngày sinh
                </th>
                <th style="text-align: center; width: 75px">
                    Giới tính
                </th>
                <th style="text-align: center; width: 90px">
                    Điện thoại
                </th>
                <th style="text-align: center; width: 80px">
                    Email
                </th>
                <th style="text-align: center; width: 80px">
                    Chức vụ
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                string birthDateOnly = item.Birthday.Date.ToShortDateString();
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => birthDateOnly)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sex)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div style="display:flex;">
        <p class="btn-google" style=" padding: 15px; border-radius:10px;border-style: none;  border-right: 4px solid ">Tổng số lượng: @ViewBag.count </p>
        <p class="btn-facebook" style="padding: 15px; border-radius: 10px; border-style: none; border-right: 4px solid ">Số lượng admin: @ViewBag.count2 </p>
        <p class="btn-facebook" style="padding: 15px; border-radius: 10px; border-style: none; border-right: 4px solid ">Số lượng quản lý: @ViewBag.count3 </p>
        <p class="btn-facebook" style="padding: 15px; border-radius: 10px; border-style: none; border-right: 4px solid ">Số lượng nhân viên: @ViewBag.count4 </p>
    </div>
    <p>Time: @DateTime.Now</p>
</body>