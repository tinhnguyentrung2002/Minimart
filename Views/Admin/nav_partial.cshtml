@model IEnumerable<LTW_NTTinh_2024802010018.Models.Response>
<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
    <!-- Sidebar Toggle (Topbar) -->
    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
        <i class="fa fa-bars"></i>
    </button>

    <!-- Topbar Search -->
    <div><img style="width:50px" src="~/Images/logo.png" /></div>

    <!-- Topbar Navbar -->
    <ul class="navbar-nav ml-auto">
        <!-- Nav Item - Alerts -->
        <li class="nav-item dropdown no-arrow mx-1">
            <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-target="#navItemGame1">
                <i class="fas fa-bell fa-fw"></i>
                <!-- Counter - Alerts -->
                @if (ViewBag.count > 3)
                {
                    <span class="badge badge-danger badge-counter">3+</span>
                }
                else if (ViewBag.count < 3 && ViewBag.count > 0)
                {
                    <span class="badge badge-danger badge-counter">@ViewBag.count </span>
                }
                else
                {

                }

            </a>
            <!-- Dropdown - Alerts -->
            <div id="navItemGame1" class="dropdown-list dropdown-menu dropdown-menu-right shadow animated--grow-in"
                 aria-labelledby="alertsDropdown">
                <h6 class="dropdown-header">
                    Thông báo
                </h6>
                @foreach (var item in Model)
                {
                   
                    <a class="dropdown-item d-flex align-items-center" href="@Url.Action("contact_manage", "Contact", new {id = 2})">
                        <div class="mr-3">
                            <div class="icon-circle bg-primary">
                                <i class="fas fa-file-alt text-white"></i>
                            </div>
                        </div>
                        <div>
                            <div class="small text-gray-500">@item.Updated</div>
                            <span class="font-weight-bold">Có phản hồi mới: @item.ResponseID</span>
                        </div>
                    </a>
                }

                <a class="dropdown-item text-center small text-gray-500" href="@Url.Action("contact_manage", "Contact", new {id = 2})">Xem tất cả</a>
            </div>
        </li>
        <div class="topbar-divider d-none d-sm-block"></div>

        <!-- Nav Item - User Information -->
        <li class="nav-item dropdown no-arrow">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-target="#navItemGame">
                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@Session["UserName"].ToString()</span>
                <img class="img-profile rounded-circle" src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava6.webp">
            </a>
            <!-- Dropdown - User Information -->
            <div id="navItemGame" class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                <a class="dropdown-item" href="" data-toggle="modal" data-target="#addModal-@Session["EmployeeID"]">
                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                    Thông tin chi tiết
                </a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="@Url.Action("user_logout","User")" data-toggle="modal" data-target="#logoutModal">
                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                    Đăng xuất
                </a>
            </div>
        </li>

    </ul>
</nav>
