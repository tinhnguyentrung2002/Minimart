
@model LTW_NTTinh_2024802010018.Models.Employee
<script>
    $(document).ready(function () {
        $("#popup").click(function () {
            Swal.fire(
                'OK!',
                'Sucess!',
                'success'
            )
        })
    })
</script>
<style>
    * {
        font-size: large;
    }
</style>
@{
    List<SelectListItem> list = new List<SelectListItem>();
    list.Add(new SelectListItem
    {
        Text = "Quản lý",
        Value = "Quản lý",
        Selected = true
    });
    list.Add(new SelectListItem
    {
        Text = "Nhân viên ",
        Value = "Nhân viên",
        Selected = false
    });
    List<SelectListItem> list1 = new List<SelectListItem>();
    list1.Add(new SelectListItem
    {
        Text = "Nam",
        Value = "Nam",
        Selected = false
    });
    list1.Add(new SelectListItem
    {
        Text = "Nữ",
        Value = "Nữ",
        Selected = false
    });

}
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div style="min-width:1000px;" class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 style="text-align:center" class="modal-title" id="exampleModalLabel">THÊM NHÂN VIÊN MỚI</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            @using (Html.BeginForm("Create", "Employee", FormMethod.Post, new
            {
                @enctype = "multipart/form-data"
            }))
            {
                <div class="modal-body">
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal" style="margin-top:30px;">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="control-label col-md-2">Họ và tên: </label>
                            <div class="col-md-10">
                                <input type="text" maxlength="30" size="70" placeholder="Nhập họ và tên" name="Name" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Địa chỉ: </label>
                            <div class="col-md-10">
                                <input type="text" maxlength="100" placeholder="Nhập địa chỉ" size="90" name="Address" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Ngày sinh: </label>
                            <div class="col-md-10">
                                <input type="date" name="Birthday" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Giới tính: </label>
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.Sex, list1, htmlAttributes: new { @name = "Sex" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Chức vụ: </label>
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.Title, list, htmlAttributes: new { @name = "Title" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Số điện thoại: </label>
                            <div class="col-md-10">
                                <input type="text" maxlength="10" placeholder="Nhập số điện thoại" name="Phone" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Email: </label>
                            <div class="col-md-10">
                                <input type="email"maxlength="80" placeholder="Nhập email" size="90" name="Email" required />
                            </div>
                        </div>                      
                    </div>                   
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                    <input id="popup" type="submit" value="Tạo mới" style="font-size:large" class="btn btn-success" />
                </div>
            }
        </div>
    </div>
</div>