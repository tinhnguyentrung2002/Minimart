
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<script>localStorage.clear();</script>
<div class="container">

    <div class="row">
        <div class="col-lg-3 col-md-2"></div>
        <div class="col-lg-6 col-md-8 login-box">
            <div class="col-lg-12">
                <i class="fa-solid glyphicon-fast-forward"></i>
            </div>
            <div class="col-lg-12 login-title">
                ĐĂNG NHẬP
            </div>
            <p class="text-danger"> @ViewBag.ThongBao1</p>
            @using (Html.BeginForm())
            {
                if (Request.Cookies["UserName"] != null && Request.Cookies["Password"] != null)
                {
                    <div class="col-lg-12 login-form">
                        <div class="col-lg-12 login-form">
                            <form>
                                <div class="form-group">
                                    <label class="form-control-label">TÊN ĐĂNG NHẬP</label>

                                    @{
                                        string n = Request.Cookies["UserName"].Value;
                                        string p = Request.Cookies["Password"].Value;
                                    }
                                    <input name="UserName" type="text" class="form-control" placeholder="Nhập tài khoản" value="@n">
                                    <p style="color:red">@ViewData["Err1"]</p>
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">MẬT KHẨU</label>
                                    <input name="Password" type="password" class="form-control" i placeholder="Nhập mật khẩu" , value="@p">
                                    <p style="color:red">@ViewData["Err2"]</p>
                                </div>
                                <div>
                                    @Html.CheckBox("remember", true) <span style="font-style: italic; color: #A2A4A4;cursor:pointer">
                                        Nhớ thông tin
                                        đăng nhập
                                    </span>
                                </div>
                                <div class="col-lg-12 loginbttm">
                                    <div class="col-lg-6 login-btm login-text">
                                    </div>
                                    <div style="text-align: center" class="col-lg-6 login-btm login-button">
                                        <button style="margin:0 auto;" type="submit" class="button-login" role="button">ĐĂNG NHẬP</button>
                                        <p style="color:red">@ViewBag.ThongBao</p>
                                        <!--<a style="color:#fff;text-align:center" href="@Url.Action("Index","Mart")">Quay lại |</a>-->

                            <a style="color: #fff; text-align: center" href="@Url.Action("user_register","User")">Chưa có tài khoản ?</a>
                        </div>
                     </div>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="col-lg-12 login-form">
            <div class="col-lg-12 login-form">
                <form>
                    <div class="form-group">
                        <label class="form-control-label">TÊN ĐĂNG NHẬP</label>
                        <input name="UserName" type="text" class="form-control" placeholder="Nhập tài khoản">
                        <p style="color:red">@ViewData["Err1"]</p>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">MẬT KHẨU</label>
                        <input name="Password" type="password" class="form-control" i placeholder="Nhập mật khẩu">
                        <p style="color:red">@ViewData["Err2"]</p>
                    </div>
                    <div>
                        @Html.CheckBox("remember") <span style="font-style: italic; color: #A2A4A4">
                            Nhớ thông tin
                            đăng nhập
                        </span>
                    </div>
                    <div class="col-lg-12 loginbttm">
                        <div class="col-lg-6 login-btm login-text">
                        </div>
                        <div style="text-align: center" class="col-lg-6 login-btm login-button">
                            <button style="margin:0 auto;" type="submit" class="button-login" role="button">ĐĂNG NHẬP</button>
                            <p style="color:red">@ViewBag.ThongBao</p>
                            <!--<a style="color:#fff;" href="Url.Action("Index","Mart")">Quay lại |</a>-->
                                        <a style="color: #fff;" href="@Url.Action("user_register","User")">Chưa có tài khoản ?</a>
                                    </div>
                                </div>
                              
                            </form>
                        </div>
                    </div>
                }

            }
            <div class="col-lg-3 col-md-2" style="color:red; "></div>
        </div>
    </div>
    <
</div>





