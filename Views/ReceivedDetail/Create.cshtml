@model LTW_NTTinh_2024802010018.Models.GoodsReceivedNote_Detail


<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div style="min-width:1000px;" class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 style="text-align:center" class="modal-title" id="exampleModalLabel">THÊM SẢN PHẨM</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            @using (Html.BeginForm("Create", "ReceivedDetail", FormMethod.Post, new
            {
                @enctype = "multipart/form-data"
            }))
            {
                <div class="modal-body">

                    @Html.AntiForgeryToken()

                    <div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="control-label col-md-2">Mã phiếu nhập: </label>
                            <div class="col-md-10">
                                <input type="text" size="70" name="ID" readonly value="@ViewBag.IDP" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Chọn sản phẩm: </label>
                            <div class="col-md-10">
                                @Html.DropDownList("Product", null, htmlAttributes: new { required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Số lượng: </label>
                            <div class="col-md-10">
                                <input type="number" size="70" placeholder="Nhập số lượng" name="Quantity" value="" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Giá nhập: </label>
                            <div class="col-md-10">
                                <input type="number" placeholder="Nhập giá" size="70" id="Price" name="Price" value="" required />
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                    <input type="submit" value="Thêm" style="font-size:large" class="btn btn-success" />
                </div>
            }
        </div>
    </div>
</div>

