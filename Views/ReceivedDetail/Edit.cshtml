@model LTW_NTTinh_2024802010018.Models.GoodsReceivedNote_Detail

<style>
    * {
        font-size: large;
    }
</style>
<div class="modal fade" id="edit-@Model.ItemID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div style="min-width:1000px;" class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 style="text-align:center" class="modal-title" id="exampleModalLabel">CHỈNH SỬA THÔNG TIN</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            @using (Html.BeginForm("Edit", "ReceivedDetail", FormMethod.Post, new
            {
                @enctype = "multipart/form-data"
            }))
            {
                <div class="modal-body">
                    <div class="form-horizontal" style="margin-top:30px;">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="control-label col-md-2">Mã phiếu nhập: </label>
                            <div class="col-md-10">
                                <input type="text" size="70" name="ID" readonly value="@Model.GRNID" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">ID Item: </label>
                            <div class="col-md-10">
                                <input type="text" size="70" name="ID2" readonly value="@Model.ItemID" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Sản phẩm: </label>
                            <div class="col-md-10">

                                @foreach (var item1 in ViewBag.Product)
                                {
                                    if (Model.ProductID == item1.ProductID)
                                    {
                                        <input type="text" size="70" name="name" readonly value="@item1.ProductName" required />
                                    }
                                }

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Số lượng: </label>
                            <div class="col-md-10">
                                <input type="number" size="70" placeholder="Nhập số lượng" name="Quantity" value="@Model.Quantity" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Giá nhập: </label>
                            <div class="col-md-10">
                                <input type="number" placeholder="Nhập giá" size="70" id="Price" name="Price" value="@Model.UnitPrice_inp" required />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                    <input id="popup" type="submit" value="Lưu" style="font-size:large" class="btn btn-success" />
                </div>
            }
        </div>
    </div>
</div>


