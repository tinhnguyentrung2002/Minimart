@model LTW_NTTinh_2024802010018.Models.GoodsReceivedNote
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div style="min-width:1000px;" class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 style="text-align:center" class="modal-title" id="exampleModalLabel">THÊM PHIẾU NHẬP MỚI</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            @using (Html.BeginForm("Create", "Received", FormMethod.Post, new
            {
                @enctype = "multipart/form-data"
            }))
            {
                <div class="modal-body">

                    @Html.AntiForgeryToken()

                    <div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="control-label col-md-2">Mã phiếu nhập: </label>
                            <div class="col-md-10">
                                <input type="text" size="70" name="ID" disabled value="@ViewBag.IDP" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Tên phiếu nhập: </label>
                            <div class="col-md-10">
                                <input type="text" maxlength="50" size="70" placeholder="Nhập tên phiếu nhập" name="Name" value="" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Ngày lập phiếu: </label>
                            <div class="col-md-10">
                                <input type="text" size="70" placeholder="Ngày lập phiếu" name="Date" readonly value="@DateTime.Now" required />
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                    <input type="submit" value="Tạo mới" style="font-size:large" class="btn btn-success" />

                </div>
            }
        </div>
    </div>
</div>


